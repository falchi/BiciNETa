<h1>Listado de usuarios</h1>


<div id="search_users" style="margin-top: 20px;">
  <%= form_tag users_path, {class: "form-search" , method: :get} do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag :Buscar, class: "btn" %>
  <% end %>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Nombre</th>
    <th>Email</th> 
    <% if current_user && current_user.is_admin? %>   
    <th></th>    
    <% end %>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.name, user %>
        </td>
        <td><%= user.email %></td>
        <% if current_user && current_user.is_admin? %>   
          <td>
            <a href="<%= edit_user_path(user) %>"><i class="icon-edit"></i></a>
            <a href="<%= user_path(user) %>" data-confirm="Est√°s seguro de eliminar a <%= user.name %>?" data-method="delete" rel="nofollow"><i class="icon-remove"></i></a>
          </td>      
        <% end %>
      </tr>
  <% end %>
</table>
<p id="notice"><%= notice %></p>

